@model RegisterLoginDto

@{
    ViewData["Title"] = "  ورود - گفتگو با تایکو ";
    Layout = "_LayoutLogin";
}




<div class="login-page2 animat-rate">
    <div class="login-content-main">

        <div class="login-content">
            <div class="login-content-header">
                <img class="img-fluid" src="/assets/images/logo/logo_big.png" alt="images">

            </div>

            <h4>
                لطفا کد یکبار مصرف پیامک شده را وارد نمائید.
