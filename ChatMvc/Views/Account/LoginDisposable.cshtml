                <div class="form-group">
                    <label class="col-form-label" for="inputEmail3"> کد یکبار مصرف</label>
                    <input class="form-control" asp-for="Password" placeholder="کد یکبار مصرف خود را وارد کنید">
                </div>


                <div class="form-group mb-0">
                    <div class="buttons"><button class="btn button-effect btn-primary" >ورود</button></div>
                </div>
            </form>
        </div>
    </div>
